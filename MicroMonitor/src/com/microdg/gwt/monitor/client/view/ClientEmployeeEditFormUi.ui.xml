<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<div>Editing a client employee</div>
		<h3><g:Label ui:field="clientName"></g:Label></h3>
		<g:VerticalPanel>
			<g:FlowPanel>
				<g:Label>Employee Name:</g:Label>
				<g:TextBox ui:field="employeeName"></g:TextBox>
			</g:FlowPanel>
			<g:FlowPanel>
				<g:Label>Email Address:</g:Label>
				<g:TextBox ui:field="employeeEmailAddr"></g:TextBox>
			</g:FlowPanel>
			<g:FlowPanel>
				<g:Label>Employee Roles:</g:Label>
				<g:TextBox ui:field="employeeRoles"></g:TextBox>
			</g:FlowPanel>
		</g:VerticalPanel>
		<g:Button styleName="btn btn-primary" ui:field="button">Save</g:Button>
	</g:HTMLPanel>
</ui:UiBinder> 
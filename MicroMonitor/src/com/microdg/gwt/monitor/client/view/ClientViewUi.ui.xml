<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<h2>Client: <g:InlineLabel ui:field="name"></g:InlineLabel></h2>
		This is the client view.
		<g:Button styleName="{style.important}" ui:field="button" >Close</g:Button>
	</g:HTMLPanel>
</ui:UiBinder> 